
<h1>Books</h1>
<br>
<% if can? :create, Book %><%= link_to 'New Book', new_book_path %><% end %>
<br>
<table id="mytbl">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="book-tr-<%= book.id %>">
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= link_to 'Show', book %></td>
        <% if can? :update, book %><td><%= link_to 'Edit', edit_book_path(book) %></td><% end %>
        <% if can? :destroy, book %><td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

